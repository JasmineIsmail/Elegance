              <form action="/admin/uploadCategory" method="post" enctype="multipart/form-data" onsubmit="return validateCategory()">
                <div class="row mb-4 mt-3">
                  <label for="categoryName" class="col-sm-2 col-form-label">Name</label>
                  <div class="col-sm-10">
                    <input type="text" name="categoryName" class="form-control">
                  </div>
                </div>
                <div class="row mb-4 mt-3">
                  <label for="description" class="col-sm-2 col-form-label">Description</label>
                  <div class="col-sm-10">
                    <textarea class="form-control" name="description"  style="height: 100px"></textarea>
                  </div>
                </div>
                <%if(typeof message != 'undefined'){ %>
                  <h6 style="color: red;"><%= message %></h6>
                <%} %>
                <div class="row mb-4 mt-3">
                 <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
                </div>
          </form>

            </div>
          </div>
        </div>
        <script>
            function validateCategory(){
            let name= document.getElementsByName("categoryName")[0];
            let description=document.getElementsByName("description")[0];
            var isValid = true;
            if(name.value.trim()===""){
              highlightField(name);
              name.placeholder="Field is empty";
              isValid=false;
            }else{
              removeHighlight(name);
              name.placeholder="";
              }
            if(description.value.trim()=== ""){
              highlightField(description);
              description.placeholder="feild is empty.";
              isValid=false;
            }else {
              removeHighlight(description);
            }
            return isValid;
          }
          function highlightField(field){
            field.style.borderColor="red";
            field.focus();
          }
          function removeHighlight(field){
            field.style.borderColor='';
          }
           

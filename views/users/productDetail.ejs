	<script>

    	function setupImageZoom() {
        	var imageContainers = document.querySelectorAll('.wrap-pic-w');
        	imageContainers.forEach(function(container, index) {
            	var largeImage = container;
           		var pdtImage = container.querySelector('.pdtImage');

            	largeImage.addEventListener("mousemove", function(event) {
                var rect = largeImage.getBoundingClientRect();
                var offsetX = event.clientX - rect.left;
                var offsetY = event.clientY - rect.top;

                // Calculate zoom center
                var centerX = rect.width / 2;
                var centerY = rect.height / 2;

                // Calculate zoom scale
                var scaleX = 2; // Increase to zoom level
                var scaleY = 2;

                // Calculate translation values
                var translateX = (centerX - offsetX) * (scaleX - 1);
                var translateY = (centerY - offsetY) * (scaleY - 1);

                // Apply zoom and translation transformations
                pdtImage.style.transform = 'translate(' + translateX + 'px, ' + translateY + 'px) scale(' + scaleX + ',' + scaleY + ')';
            });

            largeImage.addEventListener("mouseleave", function() {
                // Reset zoom and translation transformations when mouse leaves
                pdtImage.style.transform = 'translate(0px, 0px) scale(1)';
            });
        });
    }

    // Call the setupImageZoom function after the images are loaded
    window.addEventListener('load', function() {
        setupImageZoom();
    });
</script>
	
